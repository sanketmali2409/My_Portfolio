<!-- Hero Section -->
<section class="hero-section bg-gradient-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">
                    Embedded Systems Engineer
                </h1>
                <p class="lead mb-4">
                    Passionate about creating innovative solutions with microcontrollers, 
                    IoT systems, and embedded hardware. Specializing in STM32, ESP32, 
                    8051, and PIC microcontroller programming.
                </p>
                <div class="hero-buttons">
                    <a href="/projects" class="btn btn-light btn-lg me-3">
                        <i class="fas fa-project-diagram me-2"></i>View Projects
                    </a>
                    <a href="/contact" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-envelope me-2"></i>Get In Touch
                    </a>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <div class="hero-image">
                    <img src="/images/profile.jpg" alt="Sanket Mali" class="img-fluid rounded-circle profile-hero" style="max-width: 350px; max-height: 350px; object-fit: cover; border: 4px solid rgba(255,255,255,0.3); box-shadow: 0 10px 30px rgba(0,0,0,0.3);">
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Projects Section -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2 class="text-center mb-5">
                    <i class="fas fa-project-diagram me-3"></i>Featured Projects
                </h2>
            </div>
        </div>
        <div class="row">
            <% if (typeof projects !== 'undefined' && projects && projects.length > 0) { %>
                <% projects.slice(0, 3).forEach(project => { %>
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 project-card">
                        <div class="card-img-top bg-light text-center py-4">
                            <i class="fas fa-microchip fa-4x text-primary"></i>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title"><%= project.title %></h5>
                            <p class="card-text"><%= project.description.substring(0, 100) %>...</p>
                            <div class="mb-3">
                                <% project.technologies.slice(0, 3).forEach(tech => { %>
                                <span class="badge bg-secondary me-1"><%= tech %></span>
                                <% }) %>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <a href="<%= project.github %>" class="btn btn-outline-primary btn-sm" target="_blank">
                                <i class="fab fa-github me-1"></i>View Code
                            </a>
                            <span class="badge bg-info float-end"><%= project.category %></span>
                        </div>
                    </div>
                </div>
                <% }) %>
            <% } else { %>
                <div class="col-12 text-center">
                    <p class="text-muted">No featured projects available at the moment.</p>
                </div>
            <% } %>
        </div>
        <% if (typeof projects !== 'undefined' && projects && projects.length > 0) { %>
        <div class="text-center mt-4">
            <a href="/projects" class="btn btn-primary btn-lg">
                <i class="fas fa-arrow-right me-2"></i>View All Projects
            </a>
        </div>
        <% } %>
    </div>
</section>

<!-- Skills Preview Section -->
<section class="bg-light py-5">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2 class="text-center mb-5">
                    <i class="fas fa-tools me-3"></i>Technical Expertise
                </h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 col-sm-6 mb-4">
                <div class="text-center">
                    <i class="fas fa-microchip fa-3x text-primary mb-3"></i>
                    <h5>Microcontrollers</h5>
                    <p class="text-muted">STM32, ESP32, 8051, PIC</p>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-4">
                <div class="text-center">
                    <i class="fas fa-code fa-3x text-primary mb-3"></i>
                    <h5>Programming</h5>
                    <p class="text-muted">C/C++, Assembly, Python</p>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-4">
                <div class="text-center">
                    <i class="fas fa-wifi fa-3x text-primary mb-3"></i>
                    <h5>IoT & Connectivity</h5>
                    <p class="text-muted">WiFi, Bluetooth, MQTT</p>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-4">
                <div class="text-center">
                    <i class="fas fa-robot fa-3x text-primary mb-3"></i>
                    <h5>Robotics</h5>
                    <p class="text-muted">Control Systems, Automation</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h3 class="mb-4">Ready to collaborate on your next embedded project?</h3>
                <p class="lead mb-4">Let's discuss how I can help bring your hardware ideas to life.</p>
                <a href="/contact" class="btn btn-primary btn-lg">
                    <i class="fas fa-paper-plane me-2"></i>Start a Conversation
                </a>
            </div>
        </div>
    </div>
</section>