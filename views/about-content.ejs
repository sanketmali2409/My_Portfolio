    <div class="container">
        <h2 class="text-center mb-5">
            <i class="fas fa-briefcase me-3"></i>Professional Journey
        </h2>
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="timeline">
                    <div class="timeline-item mb-4 scroll-reveal-card">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <h5 class="card-title">Senior Embedded Systems Engineer</h5>
                                        <h6 class="card-subtitle mb-2 text-muted">Current Role</h6>
                                    </div>
                                    <span class="badge bg-primary">2023 - Present</span>
                                </div>
                                <p class="card-text">
                                    Leading development of advanced IoT solutions and mentoring junior engineers. 
                                    Focus on STM32 and ESP32 platforms with real-time systems.
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="timeline-item mb-4 scroll-reveal-card">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <h5 class="card-title">Embedded Systems Engineer</h5>
                                        <h6 class="card-subtitle mb-2 text-muted">Previous Role</h6>
                                    </div>
                                    <span class="badge bg-success">2021 - 2023</span>
                                </div>
                                <p class="card-text">
                                    Developed microcontroller applications and IoT solutions. 
                                    Specialized in industrial automation and control systems.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- My Approach Section -->
<section class="py-5 bg-light scroll-reveal">
    <div class="container">
        <h2 class="text-center mb-5">
            <i class="fas fa-lightbulb me-3"></i>My Approach
        </h2>
        <div class="row text-center">
            <div class="col-md-4 mb-4 scroll-reveal-card">
                <div class="p-4">
                    <i class="fas fa-puzzle-piece fa-3x text-primary mb-3"></i>
                    <h5 class="fw-bold">Problem Solving</h5>
                    <p class="text-muted">I thrive on dissecting complex problems and engineering robust, efficient solutions from the ground up.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4 scroll-reveal-card">
                <div class="p-4">
                    <i class="fas fa-book-reader fa-3x text-primary mb-3"></i>
                    <h5 class="fw-bold">Continuous Learning</h5>
                    <p class="text-muted">The world of embedded systems is always evolving. I am committed to staying current with the latest technologies and methodologies.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4 scroll-reveal-card">
                <div class="p-4">
                    <i class="fas fa-users fa-3x text-primary mb-3"></i>
                    <h5 class="fw-bold">Collaboration</h5>
                    <p class="text-muted">I believe the best products are built by teams. I value open communication and collaborative development.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Projects Section -->
<section class="py-5 scroll-reveal">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2 class="text-center mb-5">
                    <i class="fas fa-project-diagram me-3"></i>Featured Projects
                </h2>
            </div>
        </div>
        <div class="row">
            <% if (typeof projects !== 'undefined' && projects && projects.length > 0) { %>
                <% projects.slice(0, 3).forEach(project => { %>
                <div class="col-lg-4 col-md-6 mb-4 scroll-reveal-card">
                    <div class="card h-100 project-card">
                        <div class="card-img-top bg-light text-center py-4">
                            <i class="fas fa-microchip fa-4x text-primary"></i>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title"><%= project.title %></h5>
                            <p class="card-text"><%= project.description.substring(0, 100) %>...</p>
                            <div class="mb-3">
                                <% project.technologies.slice(0, 3).forEach(tech => { %>
                                <span class="badge bg-secondary me-1"><%= tech %></span>
                                <% }) %>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <a href="<%= project.github %>" class="btn btn-outline-primary btn-sm" target="_blank">
                                <i class="fab fa-github me-1"></i>View Code
                            </a>
                            <span class="badge bg-info float-end"><%= project.category %></span>
                        </div>
                    </div>
                </div>
                <% }) %>
            <% } else { %>
                <!-- Static Project Cards if no projects data available -->
                <div class="col-lg-4 col-md-6 mb-4 scroll-reveal-card">
                    <div class="card h-100 project-card">
                        <div class="card-img-top bg-light text-center py-4">
                            <i class="fas fa-microchip fa-4x text-primary"></i>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">IoT Weather Station</h5>
                            <p class="card-text">ESP32-based weather monitoring system with cloud connectivity and real-time data visualization...</p>
                            <div class="mb-3">
                                <span class="badge bg-secondary me-1">ESP32</span>
                                <span class="badge bg-secondary me-1">WiFi</span>
                                <span class="badge bg-secondary me-1">MQTT</span>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <a href="https://github.com/sanketmali2409" class="btn btn-outline-primary btn-sm" target="_blank">
                                <i class="fab fa-github me-1"></i>View Code
                            </a>
                            <span class="badge bg-info float-end">ESP32</span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 mb-4 scroll-reveal-card">
                    <div class="card h-100 project-card">
                        <div class="card-img-top bg-light text-center py-4">
                            <i class="fas fa-cog fa-4x text-success"></i>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">Smart Home Controller</h5>
                            <p class="card-text">STM32-based home automation system with mobile app control and voice commands...</p>
                            <div class="mb-3">
                                <span class="badge bg-secondary me-1">STM32</span>
                                <span class="badge bg-secondary me-1">FreeRTOS</span>
                                <span class="badge bg-secondary me-1">Bluetooth</span>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <a href="https://github.com/sanketmali2409" class="btn btn-outline-primary btn-sm" target="_blank">
                                <i class="fab fa-github me-1"></i>View Code
                            </a>
                            <span class="badge bg-info float-end">STM32</span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 mb-4 scroll-reveal-card">
                    <div class="card h-100 project-card">
                        <div class="card-img-top bg-light text-center py-4">
                            <i class="fas fa-robot fa-4x text-warning"></i>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">Robotic Arm Control</h5>
                            <p class="card-text">6-DOF robotic arm with inverse kinematics and precise servo control system...</p>
                            <div class="mb-3">
                                <span class="badge bg-secondary me-1">Arduino</span>
                                <span class="badge bg-secondary me-1">Servo</span>
                                <span class="badge bg-secondary me-1">Kinematics</span>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <a href="https://github.com/sanketmali2409" class="btn btn-outline-primary btn-sm" target="_blank">
                                <i class="fab fa-github me-1"></i>View Code
                            </a>
                            <span class="badge bg-info float-end">Arduino</span>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
        <div class="text-center mt-4">
            <a href="/projects" class="btn btn-primary btn-lg">
                <i class="fas fa-arrow-right me-2"></i>View All Projects
            </a>
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="py-5 scroll-reveal">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h3 class="mb-4">Ready to collaborate on your next embedded project?</h3>
                <p class="lead mb-4">Let's discuss how I can help bring your hardware ideas to life.</p>
                <a href="/contact" class="btn btn-primary btn-lg">
                    <i class="fas fa-paper-plane me-2"></i>Start a Conversation
                </a>
            </div>
        </div>
    </div>
</section>

