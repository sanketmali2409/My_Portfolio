.page-header {
    border-bottom: 1px solid #dee2e6;
}
.feature-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 4rem;
    height: 4rem;
    font-size: 2rem;
}
.card {
    transition: transform .2s ease-in-out, box-shadow .2s ease-in-out;
}
