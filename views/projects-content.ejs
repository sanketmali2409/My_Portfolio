<!-- Project Filters -->
<section class="py-4">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div id="project-filters" class="d-flex justify-content-center flex-wrap gap-2" role="group" aria-label="Project Filters">
                    <button type="button" class="btn btn-outline-primary active" data-filter="*">All Projects</button>
                    <button type="button" class="btn btn-outline-primary" data-filter="lpc2148">LPC2148 (ARM7)</button>
                    <button type="button" class="btn btn-outline-primary" data-filter="pic16f877a">PIC16F877A</button>
                    <button type="button" class="btn btn-outline-primary" data-filter="esp32">ESP32</button>
                    <button type="button" class="btn btn-outline-primary" data-filter="ai/ml">AI/ML</button>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Projects Grid -->
<section class="py-5">
    <div class="container">
        <div class="row project-grid d-flex align-items-stretch">
            <% const allowedCategories = ['LPC2148', 'PIC16F877A', 'ESP32', 'AI/ML']; %>
            <% const filteredProjects = projects.filter(p => allowedCategories.includes(p.category)); %>
            <% filteredProjects.forEach(project => { %>
            <div class="col-lg-6 col-xl-4 mb-4 project-item" data-category="<%= project.category.toLowerCase().replace(/\s+/g, '-') %>">
                <div class="card h-100 project-card">
                    <div class="card-img-top bg-light text-center py-4">
                        <% if (project.category === 'LPC2148') { %>
                            <i class="fas fa-microchip fa-4x text-primary"></i>
                        <% } else if (project.category === 'PIC16F877A') { %>
                            <i class="fas fa-cog fa-4x text-success"></i>
                        <% } else if (project.category === 'ESP32') { %>
                            <i class="fas fa-wifi fa-4x text-info"></i>
                        <% } else if (project.category === 'AI/ML') { %>
                            <i class="fas fa-brain fa-4x text-warning"></i>
                        <% } else { %>
                            <i class="fas fa-project-diagram fa-4x text-secondary"></i>
                        <% } %>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title mb-0"><%= project.title %></h5>
                            <span class="badge bg-info"><%= project.category %></span>
                        </div>
                        <p class="card-text"><%= project.description %></p>
                        <div class="mb-3">
                            <% project.technologies.slice(0, 4).forEach(tech => { %>
                            <span class="badge bg-secondary me-1 mb-1"><%= tech %></span>
                            <% }) %>
                            <% if (project.technologies.length > 4) { %>
                            <span class="badge bg-light text-dark">+<%= project.technologies.length - 4 %> more</span>
                            <% } %>
                        </div>
                        <% if (project.hardware && project.hardware.length > 0) { %>
                        <div class="mb-3">
                            <small class="text-muted"><strong> Hardware: </strong></small><br>
                            <% project.hardware.slice(0, 3).forEach(hw => { %>
                            <span class="badge bg-light text-dark me-1 mb-1"><%= hw %></span>
                            <% }) %>
                            <% if (project.hardware.length > 3) { %>
                            <span class="badge bg-light text-dark">+<%= project.hardware.length - 3 %> more</span>
                            <% } %>
                        </div>
                        <% } %>
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">Year: <%= project.year %></small>
                            <a href="<%= project.github %>" class="btn btn-outline-primary btn-sm" target="_blank">
                                <i class="fab fa-github me-1"></i>View Code
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
</section>

